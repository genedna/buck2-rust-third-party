load("@prelude//rust:cargo_package.bzl", "cargo")
load("@prelude//rust:cargo_buildscript.bzl", "buildscript_run")
load("//third-party/rust/crates/zstd-sys/2.0.14+zstd.1.5.7:build.bzl", "get_rust_features")


cargo.rust_binary(
    name = "zstd-sys-build-script",
    srcs = ["build.rs"],
    crate_root = "build.rs",
    crate = "build_script_build",
    edition = "2018",
    deps = [
        "//third-party/rust/crates/cc:1.2.16",
        "//third-party/rust/crates/pkg-config:",
        "//third-party/rust/crates/bindgen:0.71.1",
    ],
    features = get_rust_features(),
)

buildscript_run(
    name = "zstd-sys-buildscript-run",
    package_name = "zstd-sys",
    buildscript_rule = ":zstd-sys-build-script",
    features = get_rust_features(),
    version = "2.0.14+zstd.1.5.7",
)

cargo.rust_library(
    name = "zstd-sys",
    srcs = glob([
        "src/**/*.rs",
    ]),
    crate_root = "src/lib.rs",
    crate = "zstd_sys",
    edition = "2018",
    features = get_rust_features(),
    rustc_flags = ["@$(location :zstd-sys-buildscript-run[rustc_flags])"],
    deps = [],
    visibility = ["PUBLIC"],
)
